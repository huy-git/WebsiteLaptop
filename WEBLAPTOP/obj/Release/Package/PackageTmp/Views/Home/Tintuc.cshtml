@using WEBLAPTOP.Models
@{
    ViewBag.Title = "Tintuc";
    Layout = "~/Views/Shared/_Layout - Tintuc.cshtml";
    List <loaiTT> TT = ViewBag.Tintucs;
}
<style>
    #tintuc
    {
        margin-left:110px
    }
    
     .p-1 {
        font-size: 18px;
        font-family: 'Roboto Slab',sans-serif;
        margin-left: 5px;
    }

        .p-1:hover {
            cursor: pointer
        }

    .i {
        font-size: 12px;
        margin-left: 10px;
    }

    .p-2 {
        font-size: 14px;
        text-align:justify
    }
    a
    {
        margin-left: 5px;
    }
    #LTT
    {
        margin-left:1200px;
        margin-top:-1200px;
    }
    #TD
    {
          background-color:#7CCFC4;
          padding:12px;
          width:250px;
    }
    #LT{
            background-color:white;
            width:250px;
            margin-left:0.2px
      
    }
    .tt img
    {
        width:300px;
        height:250px;
       
    }
   
</style>
<div id="tintuc" class="col-md-12 row" style="width:95%">
    @foreach (var item in TT)
    {
        <div class="tt col-md-7 row">

            @foreach (var tin in item.tintucs)
            {
                <div class="col-md-2"><img src="~/IMG/@tin.img" style="margin-left: 30px;margin-bottom: 50px;" /></div>
                <div class="col-md-6" style="margin-left:200px">
                    <p class="p-1">@tin.tieude</p>
                    <i class="i">@tin.nguoidang (@tin.ngaydang) </i>
                    <p class="p-2">@tin.noidung</p>
                    <a class="link" href="/Home/ChitietTT?macttt=@tin.maTT" style="margin-top:-20px;">Xem chi tiết <i class="fa fa-angle-double-right"></i></a>
                </div>
            }
        </div>
    }
    <div id="LTT" class="col-md-2">
       
            <div id="TD">
                <i class="fas fa-bars">&nbsp;  Tin tức</i>
            </div>
            <div id="LT" class=" row">
                <ul>
                    @foreach (var ite in TT)
                    {
                    <li @*onclick="filting()"*@ class="new">
                        <i class="far fa-newspaper"></i>
                        
                        <a href="/Home/Tintuc?maLoaiTT=@ite.maLoaiTT">
                            @ite.tenLoaiTT
                        </a>
                    </li>
                    }
                </ul>
            </div>
       
    </div>
  
</div>

